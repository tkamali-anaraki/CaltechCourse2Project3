pipeline {
  agent any
  triggers {
    pollSCM '* * * * *'
  }
  stages {
    stage ("CI") {
      stages {
        stage ("Build") {
          steps {
            sh '''
              echo "Build Stage"
            '''
          }
        }
        stage ("Push") {
          steps {
            sh '''
              echo "Push Stage"
            '''
          }
        }
      }
    }
    stage ("CD") {
      stages {
        stage ("Deploy") {
          steps {
            sh '''
              echo "Deploy Stage"
            '''
          }
        }
      }
    }
  }
}
